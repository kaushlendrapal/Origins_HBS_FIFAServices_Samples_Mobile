<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sample_fragment_background"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:navigationIcon="@drawable/arrow_left" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/logo_qatar" />

            <TextView
                android:id="@+id/group"
                style="@style/TextStyleSampleButtonTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/sample_rounded_background"
                android:gravity="center"
                android:padding="@dimen/hbs_championship_content_top_margin"
                android:text="Group Matches" />


            <TextView
                android:id="@+id/round"
                style="@style/TextStyleSampleButtonTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/sample_rounded_background"
                android:gravity="center"
                android:padding="@dimen/hbs_championship_content_top_margin"
                android:text="Round Matches" />


            <TextView
                android:id="@+id/team"
                style="@style/TextStyleSampleButtonTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/sample_rounded_background"
                android:gravity="center"
                android:padding="@dimen/hbs_championship_content_top_margin"
                android:text="Team Matches" />

            <TextView
                android:id="@+id/singleMatch"
                style="@style/TextStyleSampleButtonTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/sample_rounded_background"
                android:gravity="center"
                android:padding="@dimen/hbs_championship_content_top_margin"
                android:text="Single Match" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>