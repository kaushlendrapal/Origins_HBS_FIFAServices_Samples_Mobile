<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.originsdigital.hbswidgets.android">

    <application
        android:name="com.originsdigital.hbssample.HbsSampleApplication"
        android:allowBackup="false"
        android:label="Origins Widgets"
        android:supportsRtl="true"

        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.originsdigital.hbssample.MainActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.originsdigital.hbssample.settings.SettingsActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <activity
            android:name="com.originsdigital.hbssample.matchcenter.SampleMatchCenterActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <activity
            android:name="com.originsdigital.hbssample.videos.PlayerActivity"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:exported="false"
            android:screenOrientation="portrait"
            android:supportsPictureInPicture="true" />

    </application>
</manifest> 